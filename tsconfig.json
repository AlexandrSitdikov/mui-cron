{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist/esm",
    "removeComments": true,
    "rootDir": "src",
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
